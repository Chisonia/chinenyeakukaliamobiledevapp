<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/back_ng">


    <TextView
        android:id="@+id/Forgotpassword"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Forgot Password"
        android:textSize="40dp"
        android:layout_marginTop="90dp"
        android:textStyle="bold"
        android:textColor="#000"
        android:layout_marginHorizontal="20dp"
        app:layout_constraintTop_toTopOf="parent"


    <TextView
        android:id="@+id/Enter"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Enter Your Email To Reset Your Password"
        android:textSize="20dp"
        android:layout_marginTop="30dp"
        android:textStyle="bold"
        android:textColor="#858080"
        android:layout_marginHorizontal="20dp"
        app:layout_constraintTop_toBottomOf="@id/Forgotpassword"
        app:layout_constraintEnd_toEndOf="parent"/>

    <EditText
        android:id="@+id/entermail"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="40dp"
        android:hint="Email Address"
        android:paddingBottom="50dp"
        android:inputType="textEmailAddress"
        android:textSize="24sp"
        android:layout_marginHorizontal="20dp"
        app:layout_constraintTop_toBottomOf="@id/Enter"/>

    <Button
        android:id="@+id/ResetPassword"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="4dp"
        android:backgroundTint="#030304"
        android:text="RESET PASSWORD"
        android:textColor="#ffffff"
        android:textSize="20dp"
        android:layout_marginTop="-230dp"
        app:layout_constraintTop_toBottomOf="@+id/entermail"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <Button
        android:id="@+id/GoBack"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="4dp"
        android:backgroundTint="#D1D1DF"
        android:text="Go Back"
        android:textColor="#0E0E0E"
        android:layout_marginTop="10dp"
        android:textSize="20dp"
        android:textStyle="bold"
        app:layout_constraintTop_toBottomOf="@+id/ResetPassword"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"/>

</androidx.constraintlayout.widget.ConstraintLayout>
